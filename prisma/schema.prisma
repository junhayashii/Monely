generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
  output     = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Transaction {
  id String @id @default(cuid())
  title String
  amount Float
  date DateTime  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
  categoryId String
  category Category @relation(fields: [categoryId], references: [id])
  walletId String?
  wallet Wallet? @relation(fields: [walletId], references: [id])
}

enum CategoryType {
  INCOME
  EXPENSE
}

model Category {
  id String @id @default(cuid())
  name String @unique
  type CategoryType @default(EXPENSE)
  budget Float?
  color String?
  transactions Transaction[]
}

enum WalletType {
  CASH
  BANK
  CREDIT_CARD
  E_MONEY
}

model Wallet {
  id String @id @default(cuid())
  name String
  type WalletType @default(BANK)
  balance Float @default(0)
  color String?
  transactions Transaction[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Goal {
  id String @id @default(cuid())
  name String
  targetAmount Float
  currentAmount Float
  category String?
  deadline DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

