generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
  output     = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Transaction {
  id String @id @default(cuid())
  userId String
  title String
  amount Float
  date DateTime  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
  categoryId String?
  category Category? @relation(fields: [categoryId], references: [id])
  walletId String?
  wallet Wallet? @relation("FromWallet", fields: [walletId], references: [id])
  toWalletId String?
  toWallet Wallet? @relation("ToWallet", fields: [toWalletId], references: [id])

  @@index([userId])
  @@index([userId, date])
}

enum CategoryType {
  INCOME
  EXPENSE
}

model Category {
  id String @id @default(cuid())
  userId String
  name String @unique
  type CategoryType @default(EXPENSE)
  budget Float?
  color String?
  transactions Transaction[]
  // createdAt DateTime @default(now())
  // updatedAt DateTime @updatedAt
  recurringBills RecurringBill[]
  notifications Notification[]

  @@index([userId])
}

enum WalletType {
  CASH
  BANK
  CREDIT_CARD
  E_MONEY
}

model Wallet {
  id String @id @default(cuid())
  userId String
  name String
  type WalletType @default(BANK)
  balance Float @default(0)
  color String?
  limit Float?
  closingDay Int?
  paymentDay Int?
  transactions Transaction[] @relation("FromWallet")
  toTransactions Transaction[] @relation("ToWallet")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  recurringBills RecurringBill[]

  @@index([userId])
}

model Goal {
  id String @id @default(cuid())
  userId String
  name String
  targetAmount Float
  currentAmount Float
  category String?
  deadline DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model RecurringBill {
  id String @id @default(cuid())
  userId String
  name String
  amount Float
  frequency String
  startDate DateTime
  nextDate DateTime
  categoryId String?
  category Category? @relation(fields: [categoryId], references: [id])
  walletId String
  wallet Wallet @relation(fields: [walletId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

enum NotificationType {
  BUDGET_EXCEEDED
}

model Notification {
  id String @id @default(cuid())
  userId String
  type NotificationType
  title String
  message String
  categoryId String?
  category Category? @relation(fields: [categoryId], references: [id])
  read Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}